//-remove .container to use full size
.container(ng-switch="mode")
  nav(ng-switch-when="admin", role="navigation").navbar.navbar-default
    .navbar-header
      button(type="button", data-toggle="collapse", data-target=".navbar-ex1-collapse").navbar-toggle
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a(href="#/admin").navbar-brand Bugwelder Admin
    .collapse.navbar-collapse.navbar-ex1-collapse
      ul.nav.navbar-nav
        li: a(href="#/admin/barcode-scanner") Barcode-Scanner
        li.dropdown
          a(href="#", data-toggle="dropdown", dropdown-toggle) User
            b.caret
          ul.dropdown-menu
            li: a(href="#/admin/user") Index
            li: a(href="#/admin/user/create") {{ 'Create' | translate }}
        li: a(href="#/site-notice") {{ 'Site notice' | translate }}
      ul.nav.navbar-nav.navbar-right
        li
          button.btn.btn-default.navbar-btn(ng-if="getSigninUser().email.length", ng-click="signout()") {{getSigninUser().name}} {{ 'Signout' | translate }}
          a(ng-if="!getSigninUser().email.length", href="#/admin/user/signin") {{ 'Signin' | translate }}
  nav(ng-switch-default, role="navigation").navbar.navbar-default
    .navbar-header
      button(type="button", data-toggle="collapse", data-target=".navbar-ex1-collapse").navbar-toggle
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a(href="#").navbar-brand Bugwelder
    .collapse.navbar-collapse.navbar-ex1-collapse
      ul.nav.navbar-nav 
        li.active: a(href="#") {{mode}}
        li: a(href="#") Link
      form(role="search").navbar-form.navbar-left
        .form-group 
          input(type="text", placeholder="Search").form-control
        button(type="submit").btn.btn-default Submit
      ul.nav.navbar-nav.navbar-right
        li: a(href="#") Link
        li.dropdown
          a(href="#", data-toggle="dropdown", dropdown-toggle) Dropdown
            b.caret
          ul.dropdown-menu
            li: a(href="#") Action
            li: a(href="#") Another action
            li: a(href="#") Something else here
            li: a(href="#") Separated link